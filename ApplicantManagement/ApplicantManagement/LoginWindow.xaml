<Window x:Class="ApplicantManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicantManagement"
        mc:Ignorable="d"
        Height="450" Width="300" MaxHeight="450" MaxWidth="300" MinHeight="450" MinWidth="450" WindowStyle="ToolWindow">
    <Grid>
            <StackPanel Background="{StaticResource PrimaryHueDarkBrush}" VerticalAlignment="Top">
            <Label Content="Education Manager" HorizontalAlignment="Center" Style="{StaticResource HeaderLabel1}" />
                
            </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <Label Content="Логин" Style="{StaticResource HeaderLabel3}"/>
            <TextBox x:Name="tbLogin" MaxLength="50"/>
            <Label Content="Пароль" Style="{StaticResource HeaderLabel3}"/>
            <PasswordBox x:Name="pbPassword" MaxLength="50"/>
            <Button x:Name="bLogin" Content="Войти" Click="bLogin_Click"/>
            <Button x:Name="BLogout" Content="Выйти" Click="BLogout_Click"/>
        </StackPanel>
    </Grid>
</Window>
